{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "\"${fileBasenameNoExtension}\" < input.txt > output.txt"
      ],
      "dependsOn": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}